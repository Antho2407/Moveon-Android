            android:name="com.applicationmoveon.event.ListEventActivity"
            android:label="" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
			android:name=".ListUserActivity"
            android:label="" />
        <activity
            android:configChanges="orientation"
    		android:screenOrientation="portrait"
